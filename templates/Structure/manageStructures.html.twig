{% extends 'base.html.twig' %}

{% import '_macros.html.twig' as macro %}

{% block title %}PIA User Management{% endblock title %}

{% block navbar %}
    <div class="ui inverted menu">
        <div class="menu">
            <a class="item" href="{{ path('manage_users') }}">
                <i class="user icon"></i>Utilisateurs
            </a>
            <a class="item" href="{{ path('manage_applications') }}">
                <i class="database icon"></i>Applications
            </a>
            <a class="active item" href="{{ path('manage_structures') }}">
                <i class="building icon"></i>Structures
            </a>
        </div>
        <div class="right menu">
            <a class="active item" href="{{ path('fos_user_security_logout') }}">
                Logout
            </a>
        </div>
    </div>
{% endblock navbar %}

{% block body %}

    <div class="ui grid">

        <div class="twelve wide column">

            <div class="ui segment">

                <h2>
                    <a href="?limit=1000" class="ui tiny button" style="float:right;">Voir 1000</a>
                    Liste des structures
                </h2>

                <table class="ui compact striped table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Nombre d'utilisateurs</th>
                            <th>Créé le</th>
                            <th class="right aligned">
                                <i class="cog icon"></i>
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        {% for structure in structures %}
                            <tr>
                                <td>{{ structure.id }}</td>
                                <td>{{ structure.name }}</td>
                                <td>
                                    <span class="ui label">{{ structure.users|length }}</span>
                                </td>
                                <td>
                                    {{ structure.createdAt|date('d/m/Y')}}
                                </td>
                                <td class="right aligned">
                                    <a class="ui green tiny icon button" data-modal="data-modal" href="{{ path('manage_structures_edit_structure', {'structureId':structure.id}) }}">
                                        <i class="pencil icon"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}

                    </tbody>
                </table>

                {{ pagerfanta(structures, 'semantic_ui') }}
            </div>
        </div>

        <div class="four wide column">
            <div class="ui segment">

                <h2>Ajouter une structure</h2>

                {{ render(controller('PiaApi\\Controller\\StructureController:addStructureAction')) }}

            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).on('click', 'a[data-modal]', (e) => {
            e.preventDefault();
            e.stopPropagation();
            e.stopImmediatePropagation();

            let url = $(e.currentTarget).attr('href');

            let modal = $('.ui.modal');
            modal.hide();

            $.ajax({
                url: url,
                success: (html) => {
                    let modal = $('.ui.modal');

                    modal.find('.header').html('Modifier une structure');

                    modal
                        .find('.content')
                        .html(html);

                    modal
                        .find('.content .negative, .content .deny, .content .cancel').on('click', (e) => {
                            $(e.currentTarget).closest('.ui.modal').modal('hide');
                        });

                    modal.find('.actions').remove();

                    $('.ui.checkbox').checkbox();
                    $('.ui.dropdown').dropdown();

                    modal.modal('show');
                }
            })
        });
    </script>
{% endblock javascripts %}