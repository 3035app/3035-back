{% set structure = form.vars.value %}

<div class="ui negative message">
    <div class="ui clearing basic segment">
        <div class="header">
            Êtes vous certain de vouloir supprimer cette structure ?
        </div>
        <i style="float:right;">(cliquez sur ce message pour annuler)</i>
    </div>
</div>

<table class="ui single line table">
    <thead>
        <tr>
            <th colspan="100%">
                Structure
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="collapsing">
                <i class="building icon"></i>
                <b>Nom</b>
            </td>
            <td>{{ structure.name }}</td>
        </tr>
        <tr>
            <td class="collapsing">
                <i class="users icon"></i>
                <b>Nombre d'utilisateurs associés</b>
            </td>
            <td>{{ structure.users|length }}</td>
        </tr>
        <tr>
            <td class="collapsing">
                <i class="folder open icon"></i>
                <b>Nombre de PIA associés</b>
            </td>
            <td>{{ structure.pias|length }}</td>
        </tr>

    </tbody>
</table>

{{ form_start(form) }}

{% do 
    form.submit.setRendered() %}

<input type="submit" class="ui fluid red button" value="Supprimer la structure"/>

{{ form_end(form) }}